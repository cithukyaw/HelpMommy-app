{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "globals": {
    "cordova": "readonly"
  },
  "rules": {
    "no-var": "error",
    "semi": "error",
    "space-infix-ops": "error",
    "quotes": "warn",
    "eol-last": "error",
    "arrow-body-style": [
      "warn",
      "as-needed"
    ],
    "arrow-parens": [
      "warn",
      "as-needed"
    ],
    "prefer-const": "warn",
    "camelcase": "warn",
    "comma-spacing": "warn",
    "key-spacing": "warn",
    "no-trailing-spaces": "warn",
    "eqeqeq": "warn",
    "no-multi-spaces": "warn",
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off",
    "react/prop-types": "off"
  }
}
